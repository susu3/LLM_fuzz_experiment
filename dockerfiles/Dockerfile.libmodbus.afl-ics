FROM ubuntu:20.04

# Avoid interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Update package lists
RUN apt-get update

# Install build tools
RUN apt-get install -y --fix-missing \
    build-essential \
    git \
    wget \
    autoconf \
    libtool \
    pkg-config \
    make \
    automake \
    gcc \
    g++

# Install Python and other dependencies
RUN apt-get install -y --fix-missing \
    python3 \
    python3-pip \
    patch \
    vim \
    graphviz-dev \
    libcap-dev \
    libcurl4-openssl-dev \
    libjson-c-dev \
    libpcre2-dev \
    tmux \
    tcpdump \
    watch \
    net-tools \
    iputils-ping \
    iproute2 \
    procps

# Install LLVM and Clang
RUN apt-get install -y --fix-missing \
    clang \
    llvm \
    llvm-10 \
    llvm-10-tools \
    llvm-10-runtime

# Set working directory
WORKDIR /opt/fuzzing

# Clone AFL-ICS using SSH agent forwarding
RUN --mount=type=ssh \
    mkdir -p ~/.ssh && \
    ssh-keyscan github.com >> ~/.ssh/known_hosts && \
    git clone git@github.com:susu3/AFL-ICS.git AFL-ICS && \
    cd AFL-ICS && \
    make clean all && \
    cd llvm_mode && make

# 从GitHub克隆libmodbus源码
RUN git clone https://github.com/stephane/libmodbus.git libmodbus

# 编译libmodbus，启用ASAN和AFL插桩
# AFL_USE_ASAN=1 让AFL自动处理ASAN兼容性
ENV AFL_USE_ASAN=1
ENV CC="/opt/fuzzing/AFL-ICS/afl-clang-fast"
ENV CXX="/opt/fuzzing/AFL-ICS/afl-clang-fast++"
ENV CFLAGS="-fsanitize=address -fno-omit-frame-pointer -g"
ENV CXXFLAGS="-fsanitize=address -fno-omit-frame-pointer -g"
ENV LDFLAGS="-fsanitize=address"

# 编译libmodbus（显式传递编译器和ASAN标志给configure）
RUN cd /opt/fuzzing/libmodbus && \
    git checkout 5c14f13 && \
    patch -p1 < /opt/fuzzing/AFL-ICS/tutorials/libmodbus/fuzzing.patch && \
    ./autogen.sh && \
    CC="$CC" CXX="$CXX" CFLAGS="$CFLAGS" CXXFLAGS="$CXXFLAGS" LDFLAGS="$LDFLAGS" \
    ./configure --enable-static --disable-shared && \
    make clean all

# 编译测试服务器程序（修正头文件路径和链接顺序）
RUN cd /opt/fuzzing/libmodbus/tests && \
    $CC $CFLAGS -I../src -I.. -c random-test-server.c -o random-test-server.o && \
    $CC $CFLAGS $LDFLAGS random-test-server.o ../src/.libs/libmodbus.a -lpthread -o server

# 设置PATH
ENV PATH="/opt/fuzzing/AFL-ICS:$PATH"

# 创建输出目录
RUN mkdir -p /opt/fuzzing/results

# 设置用户和权限
RUN useradd -m -s /bin/bash fuzzer && \
    chown -R fuzzer:fuzzer /opt/fuzzing
USER fuzzer

# 创建启动脚本支持次数参数
RUN echo '#!/bin/bash\n\
RUN_NUM=${RUN_NUM:-1}\n\
OUTPUT_DIR="/opt/fuzzing/results/libmodbus-afl-ics-${RUN_NUM}"\n\
echo "Starting AFL-ICS fuzzing run #${RUN_NUM}"\n\
echo "Output directory: ${OUTPUT_DIR}"\n\
# ASAN运行时配置（与AFL配合使用）\n\
export ASAN_OPTIONS="abort_on_error=1:detect_leaks=0:symbolize=0:allocator_may_return_null=1"\n\
cd /opt/fuzzing/libmodbus/tests && \\\n\
afl-fuzz -d -m none -i /opt/fuzzing/AFL-ICS/tutorials/libmodbus/in-modbus \\\n\
  -o "${OUTPUT_DIR}" \\\n\
  -N tcp://127.0.0.1/1502 -P MODBUS \\\n\
  -r /opt/fuzzing/AFL-ICS/sample_specs/Markdown/modbus.md \\\n\
  -D 10000 -Y 2 -Z 1 -q 3 -s 3 -E -K -R ./server 1502' > /opt/fuzzing/start_fuzzing.sh && \
    chmod +x /opt/fuzzing/start_fuzzing.sh

# 启动模糊测试
CMD ["/opt/fuzzing/start_fuzzing.sh"]
