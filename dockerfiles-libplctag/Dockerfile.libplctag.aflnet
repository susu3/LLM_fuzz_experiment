FROM ubuntu:20.04

# Avoid interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Update package lists
RUN apt-get update

# Install build tools
RUN apt-get install -y --fix-missing \
    build-essential \
    git \
    wget \
    cmake \
    autoconf \
    libtool \
    pkg-config \
    make \
    automake \
    gcc \
    g++

# Install Python and other dependencies
RUN apt-get install -y --fix-missing \
    python3 \
    python3-pip \
    patch \
    vim \
    graphviz-dev \
    libcap-dev \
    libcurl4-openssl-dev \
    libjson-c-dev \
    libpcre2-dev \
    tmux \
    tcpdump \
    watch \
    net-tools \
    iputils-ping \
    iproute2 \
    procps

# Install LLVM and Clang
RUN apt-get install -y --fix-missing \
    clang \
    llvm \
    llvm-10 \
    llvm-10-tools \
    llvm-10-runtime

# Set working directory
WORKDIR /opt/fuzzing

# Clone AFLNet using SSH agent forwarding
RUN --mount=type=ssh \
    mkdir -p ~/.ssh && \
    ssh-keyscan github.com >> ~/.ssh/known_hosts && \
    git clone git@github.com:susu3/aflnet-ICS-.git aflnet-ICS- && \
    cd aflnet-ICS- && \
    make clean all && \
    cd llvm_mode && make

# 设置PATH和环境变量
ENV PATH="/opt/fuzzing/aflnet-ICS-:$PATH"

# 启用ASAN支持
ENV AFL_USE_ASAN=1
ENV CC="/opt/fuzzing/aflnet-ICS-/afl-clang-fast"
ENV CXX="/opt/fuzzing/aflnet-ICS-/afl-clang-fast++"
ENV CFLAGS="-fsanitize=address -fno-omit-frame-pointer -g -fPIC"
ENV CXXFLAGS="-fsanitize=address -fno-omit-frame-pointer -g -fPIC"
ENV LDFLAGS="-fsanitize=address -pie"

# 从 GitHub 克隆 libplctag 源代码并编译
RUN git clone https://github.com/libplctag/libplctag.git libplctag && \
    cd libplctag && \
    git checkout v2.6.12 && \
    mkdir -p build && cd build && \
    cmake -DCMAKE_C_COMPILER=/opt/fuzzing/aflnet-ICS-/afl-clang-fast \
          -DCMAKE_CXX_COMPILER=/opt/fuzzing/aflnet-ICS-/afl-clang-fast++ \
          -DCMAKE_C_FLAGS="$CFLAGS" \
          -DCMAKE_CXX_FLAGS="$CXXFLAGS" \
          -DCMAKE_EXE_LINKER_FLAGS="$LDFLAGS" \
          -DCMAKE_POSITION_INDEPENDENT_CODE=ON \
          -DCMAKE_BUILD_TYPE=MinSizeRel \
          -DBUILD_TESTS=1 \
          .. && \
    make -j$(nproc) plctag_static plctag_dyn modbus_server

# 创建输出目录
RUN mkdir -p /opt/fuzzing/results

# 设置用户和权限
RUN useradd -m -s /bin/bash fuzzer && \
    chown -R fuzzer:fuzzer /opt/fuzzing
USER fuzzer

# 创建启动脚本支持次数参数
RUN echo '#!/bin/bash\n\
RUN_NUM=${RUN_NUM:-1}\n\
OUTPUT_DIR="/opt/fuzzing/results/libplctag-aflnet-${RUN_NUM}"\n\
echo "Starting AFLNet fuzzing for libplctag run #${RUN_NUM}"\n\
echo "Output directory: ${OUTPUT_DIR}"\n\
# ASAN运行时配置（与AFL配合使用）\n\
export ASAN_OPTIONS="abort_on_error=1:detect_leaks=0:symbolize=0:allocator_may_return_null=1"\n\
cd /opt/fuzzing/libplctag/build/bin_dist && \\\n\
afl-fuzz -d -m none -i /opt/fuzzing/aflnet-ICS-/tutorials/libmodbus/in-modbus \\\n\
  -o "${OUTPUT_DIR}" \\\n\
  -N tcp://127.0.0.1/5502 -P MODBUS \\\n\
  -D 10000 -q 3 -s 3 -E -K -R ./modbus_server --listen 127.0.0.1:5502' > /opt/fuzzing/start_fuzzing.sh && \
    chmod +x /opt/fuzzing/start_fuzzing.sh

# 启动模糊测试
CMD ["/opt/fuzzing/start_fuzzing.sh"]

