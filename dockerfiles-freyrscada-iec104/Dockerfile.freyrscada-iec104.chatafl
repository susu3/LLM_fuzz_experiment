FROM ubuntu:20.04

# Avoid interactive prompts
ENV DEBIAN_FRONTEND=noninteractive

# Update and install dependencies
RUN apt-get update && apt-get install -y --fix-missing \
    build-essential \
    git \
    wget \
    autoconf \
    libtool \
    pkg-config \
    make \
    automake \
    gcc \
    g++ \
    python3 \
    python3-pip \
    patch \
    vim \
    graphviz-dev \
    libcap-dev \
    libcurl4-openssl-dev \
    libjson-c-dev \
    libpcre2-dev \
    tmux \
    tcpdump \
    watch \
    net-tools \
    iputils-ping \
    iproute2 \
    procps \
    clang \
    llvm \
    llvm-10 \
    llvm-10-tools \
    llvm-10-runtime \
    unzip

# Set working directory
WORKDIR /opt/fuzzing

# Clone ChatAFL
RUN git clone https://github.com/susu3/ChatAFL.git chatafl && \
    cd chatafl/ChatAFL && \
    make clean all && \
    cd llvm_mode && make

# Clone FreyrSCADA IEC104
RUN git clone https://github.com/FreyrSCADA/IEC-60870-5-104.git freyrscada-iec104 && \
    cd freyrscada-iec104/IEC104-Linux-SDK && \
    unzip IEC104-LinuxSDK.zip

# Set up AFL environment
ENV AFL_USE_ASAN=1
ENV CC="/opt/fuzzing/chatafl/ChatAFL/afl-clang-fast"
ENV CXX="/opt/fuzzing/chatafl/ChatAFL/afl-clang-fast++"
ENV CFLAGS="-fsanitize=address -fno-omit-frame-pointer -g"
ENV CXXFLAGS="-fsanitize=address -fno-omit-frame-pointer -g"
ENV LDFLAGS="-fsanitize=address"

# Apply fuzzing patch (包含 Makefile 和源代码修改)
COPY dockerfiles-freyrscada-iec104/freyrscada-iec104-fuzzing.patch /tmp/
RUN cd /opt/fuzzing/freyrscada-iec104/IEC104-Linux-SDK/LinuxSDK/x86_64 && \
    sed -i 's/\r$//' source/simpleIEC104server.c project/iec104servertest.mak && \
    patch -p1 < /tmp/freyrscada-iec104-fuzzing.patch && \
    rm /tmp/freyrscada-iec104-fuzzing.patch

# Compile
RUN cd /opt/fuzzing/freyrscada-iec104/IEC104-Linux-SDK/LinuxSDK/x86_64/project && \
    make -f iec104servertest.mak clean && \
    make -f iec104servertest.mak

# Set PATH
ENV PATH="/opt/fuzzing/chatafl/ChatAFL:$PATH"

# Create output directory
RUN mkdir -p /opt/fuzzing/results

# Set user permissions
RUN useradd -m -s /bin/bash fuzzer && \
    chown -R fuzzer:fuzzer /opt/fuzzing
USER fuzzer

# Create fuzzing script
RUN echo '#!/bin/bash\n\
RUN_NUM=${RUN_NUM:-1}\n\
OUTPUT_DIR="/opt/fuzzing/results/freyrscada-iec104-chatafl-${RUN_NUM}"\n\
echo "Starting ChatAFL fuzzing for FreyrSCADA IEC104 run #${RUN_NUM}"\n\
echo "Output directory: ${OUTPUT_DIR}"\n\
export ASAN_OPTIONS="abort_on_error=1:detect_leaks=0:symbolize=0:allocator_may_return_null=1"\n\
cd /opt/fuzzing/freyrscada-iec104/IEC104-Linux-SDK/LinuxSDK/x86_64/output && \\\n\
afl-fuzz -d -m none -t 10000+ -i /opt/fuzzing/chatafl/ChatAFL/tutorials/iec104/in-iec104 \\\n\
  -o "${OUTPUT_DIR}" \\\n\
  -N tcp://127.0.0.1/2404 -P IEC104 \\\n\
  -W 10000 -q 3 -s 3 -E -K -R ./iec104servertest 2404' > /opt/fuzzing/start_fuzzing.sh && \
    chmod +x /opt/fuzzing/start_fuzzing.sh

CMD ["/opt/fuzzing/start_fuzzing.sh"]

