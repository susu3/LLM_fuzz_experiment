FROM ubuntu:20.04

# Avoid interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Update package lists
RUN apt-get update

# Install build tools
RUN apt-get install -y --fix-missing \
    build-essential \
    git \
    wget \
    autoconf \
    libtool \
    pkg-config \
    make \
    automake \
    gcc \
    g++

# Install Python and other dependencies
RUN apt-get install -y --fix-missing \
    python3 \
    python3-pip \
    patch \
    vim \
    graphviz-dev \
    libcap-dev \
    libcurl4-openssl-dev \
    libjson-c-dev \
    libpcre2-dev \
    tmux \
    tcpdump \
    watch \
    net-tools \
    iputils-ping \
    iproute2 \
    procps

# Install LLVM and Clang
RUN apt-get install -y --fix-missing \
    clang \
    llvm \
    llvm-10 \
    llvm-10-tools \
    llvm-10-runtime

# Set working directory
WORKDIR /opt/fuzzing

# Clone AFL-ICS using SSH agent forwarding
RUN --mount=type=ssh \
    mkdir -p ~/.ssh && \
    ssh-keyscan github.com >> ~/.ssh/known_hosts && \
    git clone git@github.com:susu3/AFL-ICS.git AFL-ICS && \
    cd AFL-ICS && \
    make clean all && \
    cd llvm_mode && make

# 从GitHub克隆IEC104源码
RUN git clone https://github.com/airpig2011/IEC104.git IEC104

# 编译IEC104，启用ASAN和AFL插桩
# AFL_USE_ASAN=1 让AFL自动处理ASAN兼容性
ENV AFL_USE_ASAN=1
ENV CC="/opt/fuzzing/AFL-ICS/afl-clang-fast"
ENV CXX="/opt/fuzzing/AFL-ICS/afl-clang-fast++"
ENV CFLAGS="-fsanitize=address -fno-omit-frame-pointer -g"
ENV CXXFLAGS="-fsanitize=address -fno-omit-frame-pointer -g"
ENV LDFLAGS="-fsanitize=address"

# 修改IEC104的Makefile来添加ASAN标志（不修改CC，使用环境变量）
RUN cd /opt/fuzzing/IEC104/test && \
    sed -i 's/^CFLAGS +=-I\$(MODULE_PATH) -lpthread$/CFLAGS +=-I\$(MODULE_PATH) -lpthread\nCFLAGS +=-Wno-return-type -fsanitize=address -g -O0\nLDFLAGS +=-fsanitize=address/' Makefile

# 复制并应用fuzzing优化补丁（单次运行模式，适合AFL fuzzing）
COPY dockerfiles-iec104/iec104-fuzzing.patch /tmp/
RUN cd /opt/fuzzing/IEC104/test && \
    patch -p2 < /tmp/iec104-fuzzing.patch && \
    rm /tmp/iec104-fuzzing.patch

# 编译IEC104（使用环境变量中的CC）
RUN cd /opt/fuzzing/IEC104/test && \
    make clean && \
    make CC="$CC"

# 设置PATH
ENV PATH="/opt/fuzzing/AFL-ICS:$PATH"

# 创建输出目录
RUN mkdir -p /opt/fuzzing/results

# 设置用户和权限
RUN useradd -m -s /bin/bash fuzzer && \
    chown -R fuzzer:fuzzer /opt/fuzzing
USER fuzzer

# 创建启动脚本支持次数参数
RUN echo '#!/bin/bash\n\
RUN_NUM=${RUN_NUM:-1}\n\
OUTPUT_DIR="/opt/fuzzing/results/iec104-afl-ics-${RUN_NUM}"\n\
echo "Starting AFL-ICS fuzzing run #${RUN_NUM}"\n\
echo "Output directory: ${OUTPUT_DIR}"\n\
# ASAN运行时配置（与AFL配合使用）\n\
export ASAN_OPTIONS="abort_on_error=1:detect_leaks=0:symbolize=0:allocator_may_return_null=1"\n\
cd /opt/fuzzing/IEC104/test && \\\n\
afl-fuzz -d -m none -t 5000+ -i /opt/fuzzing/AFL-ICS/tutorials/iec104/in-iec104 \\\n\
  -o "${OUTPUT_DIR}" \\\n\
  -N tcp://127.0.0.1/2404 -P IEC104 \\\n\
  -r /opt/fuzzing/AFL-ICS/sample_specs/Markdown/IEC104.md \\\n\
  -W 10000 -Y 2 -Z 1 -q 3 -s 3 -E -K -R ./iec104_monitor 2404' > /opt/fuzzing/start_fuzzing.sh && \
    chmod +x /opt/fuzzing/start_fuzzing.sh

# 启动模糊测试
CMD ["/opt/fuzzing/start_fuzzing.sh"]
